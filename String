    for line in f:
        line = line.strip()
        if line:
            rule = eval(f"lambda row1, row2: {line}")
            rules.append(rule)
    
def match_row(row1, row2):
    for i, rule in enumerate(rules):
        if rule(row1, row2):
            return True, i+1
    return False, "Unmatched"
    
    
    
    
    
    
    
    
    
    
    
    
    
    
